# LLM provider: one of OLLAMA, OPENAI, GEMINI
LLM_PROVIDER=OLLAMA

# For OLLAMA
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# For OpenAI API
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# For Google Gemini API
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Flask settings
FLASK_DEBUG=true
FLASK_SECRET_KEY=change-this-secret
HOST=0.0.0.0
PORT=8000

# Basic auth for app login (optional). If both are set, login is required.
AUTH_USERNAME=admin
AUTH_PASSWORD=changemeadmin1@

# Database (SQLite file path). Can be relative to project root or absolute.
DB_PATH=data/app.db